    <h1>We keep your ScreenShot at your ease...</h1>
    <%= typeof msg != 'undefined' ? msg  : '' %>
    <form action="/fileUpload" enctype="multipart/form-data" method="post">

    <div class="upload">
        <label for="file">Upload your ScreenShot</label>
        <input type="file" name="uploaded_file" id="file"> <br>

        <label for="file">Screen Shot content in brief</label>
        <input type="text" name="fileInfo" id="file"> <br> <br>
        <button class="button"><span>Upload</span></button>
    </div>
    </form>
    </section>
</main>
</body>
</html>